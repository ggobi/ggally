> lx <- lapply(nms,
+              function(n) {
+                  x <- get(n)
+                  m <- mad(x)
+                  hx <-
+                      if(!is.na(m) && m > 0) MASS::huber(x)
+                      else list(m=NA, s=NA)
+                  hMx <- huberM(x)
+                  list(loc =
+                       c(median = median(x),
+                         huber  =  hx$m,
+                         huberM = hMx$m),
+                       scale=
+                       c(mad    = m,
+                         huber  =  hx$s,
+                         huberM = hMx$s))
+              })
> r <- list(mu = sapply(lx, function(x) x$loc),
+           s  = sapply(lx, function(x) x$scale))
